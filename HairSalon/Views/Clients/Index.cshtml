@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>CLIENTS</h2>
<p>Select a client to find their contact information and their Stylist.</p>
<hr />

<div class="card">
@if (@Model.Count == 0)
{
  <p><strong>No Clients have been added to this Stylist yet! Clients cannot be added until a their Stylist has been added.</strong></p>
}
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
}
</div>
<hr />

<p class="fancyBtn">@Html.ActionLink("Back to Stylists", "Index", "Stylists")</p>