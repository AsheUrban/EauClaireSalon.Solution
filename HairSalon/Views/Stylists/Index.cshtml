@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h2>STYLISTS</h2>
<p>Select a Stylist to view a list of their clients and to learn more about their specific specialties.</p>
<hr />
<div class="card">
@if (Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}
<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
</div>
<hr />
<p class="fancyBtn">@Html.ActionLink("Add New Stylist", "Create")</p>